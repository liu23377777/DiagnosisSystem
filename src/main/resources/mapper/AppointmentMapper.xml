<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tcm.diagnosissystem.mapper.doctor.AppointmentMapper">

    <resultMap id="BaseMap" type="com.tcm.diagnosissystem.entity.Appointment">
        <id column="id" property="id"/>
        <result column="patient_id" property="patientId"/>
        <result column="doctor_id" property="doctorId"/>
        <result column="dept_id" property="deptId"/>
        <result column="appoint_time" property="appointTime"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <insert id="insert" parameterType="com.tcm.diagnosissystem.entity.Appointment" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO appointment
        (patient_id, doctor_id, dept_id, appoint_time, status, create_time)
        VALUES
        (#{patientId}, #{doctorId}, #{deptId}, #{appointTime}, #{status}, NOW())
    </insert>

    <select id="findById" resultMap="BaseMap">
        SELECT * FROM appointment WHERE id = #{id}
    </select>

    <select id="findByPatient" resultMap="BaseMap">
        SELECT * FROM appointment WHERE patient_id = #{patientId} ORDER BY appoint_time DESC
    </select>

    <select id="findByDoctorId" resultMap="BaseMap">
        SELECT * FROM appointment WHERE doctor_id = #{doctorId} ORDER BY appoint_time DESC
    </select>

    <select id="existsConflict" resultType="int">
        SELECT COUNT(*) FROM appointment
        WHERE doctor_id = #{doctorId}
          AND appoint_time = #{appointTime}
          AND status = 0
    </select>
    <delete id="deleteById">
    DELETE FROM appointment WHERE id = #{id}
    </delete>

</mapper>