<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tcm.diagnosissystem.mapper.patient.ConsultationMapper">

    <!-- 通用 resultMap -->
    <resultMap id="BaseResultMap" type="com.tcm.diagnosissystem.entity.Consultation">
        <id     column="id"              property="id"/>
        <result column="user_id"         property="userId"/>
        <result column="doctor_id"       property="doctorId"/>
        <result column="chief_complaint" property="chiefComplaint"/>
        <result column="present_illness" property="presentIllness"/>
        <result column="past_history"    property="pastHistory"/>
        <result column="allergy_history" property="allergyHistory"/>
        <result column="tongue_description" property="tongueDescription"/>
        <result column="pulse_description"  property="pulseDescription"/>
        <result column="other_symptoms"  property="otherSymptoms"/>
        <result column="status"          property="status"/>
        <result column="create_time"     property="createTime"/>
        <result column="update_time"     property="updateTime"/>
    </resultMap>

    <!-- ============= 插入 ============= -->
    <insert id="insert" parameterType="com.tcm.diagnosissystem.entity.Consultation" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO consultation (
            user_id, chief_complaint, present_illness, past_history, allergy_history,
            tongue_description, pulse_description, other_symptoms, status, create_time, update_time)
        VALUES (
            #{userId}, #{doctorId}, #{chiefComplaint}, #{presentIllness}, #{pastHistory}, #{allergyHistory},
            #{tongueDescription}, #{pulseDescription}, #{otherSymptoms}, #{status}, #{createTime}, #{updateTime})
    </insert>

    <!-- ============= 单条查询 ============= -->
    <select id="findById" resultMap="BaseResultMap">
        SELECT * FROM consultation WHERE id = #{id}
    </select>

    <!-- ============= 患者侧查询 ============= -->
    <select id="findByUserId" resultMap="BaseResultMap">
        SELECT * FROM consultation WHERE user_id = #{userId} ORDER BY create_time DESC
    </select>

    <select id="findByUserIdWithPage" resultMap="BaseResultMap">
        SELECT * FROM consultation WHERE user_id = #{userId}
        ORDER BY create_time DESC
        LIMIT #{size} OFFSET #{offset}
    </select>

    <!-- ============= 医生侧查询 ============= -->
    <select id="findByDoctorId" resultMap="BaseResultMap">
        SELECT * FROM consultation WHERE user_id = #{doctorId} ORDER BY create_time DESC
    </select>

    <select id="findByDoctorIdWithPage" resultMap="BaseResultMap">
        SELECT * FROM consultation WHERE user_id = #{doctorId}
        ORDER BY create_time DESC
        LIMIT #{size} OFFSET #{offset}
    </select>

    <!-- ============= 删除 ============= -->
    <delete id="deleteById">
        DELETE FROM consultation WHERE id = #{id}
    </delete>
</mapper>
